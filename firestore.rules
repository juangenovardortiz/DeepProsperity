rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection - each user can only access their own data
    match /users/{userId}/{document=**} {
      // Allow read/write if the user is authenticated and accessing their own data
      // OR allow unauthenticated access for the default-user (development/testing only)
      allow read, write: if isOwner(userId) || userId == 'default-user';
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
